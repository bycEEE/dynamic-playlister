<h1>Edit <% @playlist.name %>:</h1>
<%= form_for(@playlist) do |f| %>

    <% if @playlist.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@playlist.errors.count, "error") %> prohibited
        this playlist from being saved:
      </h2>
      <ul>
        <% @playlist.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, :value => @playlist.name %><br>

    <%= f.label :prvt, "I want this playlist to be private." %>
    <%= f.check_box :prvt %><br>

    <%= f.label :locked, "I want to lock this playlist and prevent changes." %>
    <%= f.check_box :locked %><br>

    <%= f.label :tag_list, "Tags (seperated by commas)" %>
    <%= f.text_field :tag_list, :value => @playlist.tag_list.join(", ") %><br>

    <%= f.hidden_field :host_id, :value => current_user.id %>
    <%= f.submit "Save Changes", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Back', @playlist %>